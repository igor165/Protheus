cNrLivro  := SF4->F4_NRLIVRO
cFormula  := SF4->F4_FORMULA

If ExistBlock("M100L001")
	nTaxa := ExecBlock("M100L001")
Else
	nTaxa := IIf(Type("nTaxa")=="U",0,nTaxa)
