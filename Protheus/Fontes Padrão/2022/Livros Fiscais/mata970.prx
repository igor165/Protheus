*/
FUNCTION A970ArqIC(lImpressao,cExtensao)

Local aIC
Local cNomeArq	:= ""
Local aArquivos := {}
Local i
Local j
Local cConteudo
Local nPos
Local cValor
Local cCampo
Local cLinha

Default lImpressao := .F.
Default cExtensao  := ".IC*"

Private n001 := 0
Private n002 := 0
Private n003 := 0
Private n004 := 0
Private n005 := 0
Private n006 := 0
Private n007 := 0
Private n008 := 0
Private n009 := 0
Private n010 := 0
Private n011 := 0
Private n012 := 0
Private n013 := 0
Private n014 := 0
Private n015 := 0
Private n016 := 0
Private n017 := 0
Private nInd := 0

aIC	:=	Array(18)
aIC	:=	Afill(aIC,0)

cNomeArq	:=	A970NomeArq()
cNomeArq	:=	SUBSTR(cNomeArq, 1, AT(".", cNomeArq) - 1)+cExtensao

aArquivos:=	Directory(cNomeArq)

If lImpressao
	SetRegua(Len(aArquivos))
Else
	ProcRegua(Len(aArquivos))
EndIf
For i:=1 to Len(aArquivos)
	If lImpressao
		IncRegua()
	Else
		IncProc()
	EndIf
	cConteudo:=	MemoRead(aArquivos[i,1])
	aCampos	:=	{"001","002","003","004","005","006","007","008","009","010","012","015","016","017","IND"}
	For j:=1 to MLCount(cConteudo,254)
		cLinha	:=	MemoLine(cConteudo,254,j)
		cCampo	:=	Substr(cLinha,1,3)
		nPos		:=	Ascan(aCampos,{|x|x==cCampo})
		If nPos==0
			Loop
		Endif
		If aCampos[nPos]=="IND"
			cValor:=	Alltrim(Substr(cLinha,5,5))
			nInd	:=	Val(cValor)
		Else
			cValor	:=	Alltrim(Substr(cLinha,52,18))
			cValor	:=	StrTran(cValor,".")
			cValor	:=	StrTran(cValor,",",".")
			cCampo	:=	"n"+cCampo
			&cCampo.	:=	Val(cValor)
		Endif
		aCampos[nPos]:=NIL
	Next j
	If i>1
		n010-=n009
		n009:=0
	Endif
	aIC[01]	+=	n001
	aIC[02]	+=	n002
	aIC[03]	+=	n003
	aIC[04]	+=	n004
	aIC[05]	+=	n005
	aIC[06]	+=	n006
	aIC[07]	+=	n007
	aIC[08]	+=	n008
	aIC[09]	+=	n009
	aIC[10]	+=	n010
	aIC[12]	+=	n012
	aIC[15]	+=	n015
	aIC[16]	+=	n016
	aIC[17]	+=	n017
	aIC[18]	:=	nInd
Next i

aIC[11]	:=	Max(0,aIC[4]-aIC[10])
aIC[13]	:=	Max(0,aIC[11]-aIC[12])
aIC[14]	:=	Max(0,aIC[10]-aIC[4])

Return(aIC)


