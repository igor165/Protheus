<% 
#DEFINE nTamFs  		"500"
Local oHtml		:= WCHtml():New() 
HttpSession->USR_SKIN := "imagens-pls"
%>

<%=oHtml:getDType(.T.,.T.)%>

<script language="JavaScript">
