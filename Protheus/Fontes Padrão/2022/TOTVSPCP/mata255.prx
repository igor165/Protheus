Function A255Manut(cAlias,nReg,nOpc)
LOCAL cCadastro	 := OemToAnsi(STR0001)   //"Grupos de Opcionais"
LOCAL nOpca		 :=0
LOCAL nRecOld	 :=0
LOCAL oDlg
LOCAL aObjects	 := {}
LOCAL aPosObj 	 := {}
LOCAL aInfo	 	 := {}
LOCAL aSize	 	 := {}
LOCAL l255Alt:=l255Inc:=l255Exc:= .F.
LOCAL cGROPC	 := ""
LOCAL aCCols     := {}
