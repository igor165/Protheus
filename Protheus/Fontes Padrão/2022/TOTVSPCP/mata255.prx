Function MT255VldExc()
Local aArea   := GetArea()
Local lRet 	  := .T.
Local cQuery  := ""
Local cAlias  := ""
Local cGROPC  := ""
Default lAutoMacao := .F.

IF !lAutoMacao
	cGROPC := M->GA_GROPC
ENDIF

DbSelectArea("SG1")

If __nOpc == 5 
		cAlias := GetNextAlias()
		cQuery := ""
			
		cQuery += "SELECT COUNT(*) QTD FROM " + RetSqlName( "SG1" ) + " "
		cQuery += "WHERE "
		cQuery += "G1_FILIAL='" + xFilial( "SG1" ) + "' AND "
		cQuery += "G1_GROPC='"   + cGROPC + "' AND "
		cQuery += "D_E_L_E_T_=' '"
	
		cQuery := ChangeQuery( cQuery )
		dbUseArea(.T.,"TOPCONN",TcGenQry(,,cQuery),cAlias,.F.,.T. )

		If (cAlias)->QTD > 0
			Help(" ",1,"VLDEXCLUGR")    
			lRet := .F.
		Endif
		
		dbSelectArea(cAlias)
		dbCloseArea()

EndIf

If __nOpc == 4 .And. __nCont == Nil
		cAlias := GetNextAlias()
		cQuery := ""

		cQuery += "SELECT COUNT(*) QTD FROM " + RetSqlName( "SG1" ) + " "
		cQuery += "WHERE "
		cQuery += "G1_FILIAL='" + xFilial( "SG1" ) + "' AND "
		cQuery += "G1_GROPC='"   + cGROPC + "' AND "
		cQuery += "G1_OPC ='" + aCols[n][1] + "' AND "
		cQuery += "D_E_L_E_T_=' '"

		cQuery := ChangeQuery( cQuery )
		dbUseArea(.T.,"TOPCONN",TcGenQry(,,cQuery),cAlias,.F.,.T. )

		If (cAlias)->QTD > 0
			Help(" ",1,"VLDEXCLUIT")
		  	lRet := .F.
	  		__nCont := 1
		Endif

		dbSelectArea(cAlias)
		dbCloseArea()
Else
	__nCont := Nil
EndIf

RestArea(aArea)
Return(lRet)

