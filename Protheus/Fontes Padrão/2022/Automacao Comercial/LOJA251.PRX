Function Loja251()

Local oHora
Local oFont
LOCAL nOpca := 0
LOCAL oDlgHora
Private nHora    := 1

If !lFiscal	
	// Para programar e desprogramar horário de verão na impressora deve-se
	// estar cadastrado como usu rio fiscal e com os parƒmetros da impressora corretos.
	// Aten‡„o
	MsgStop(Oemtoansi(STR0001) + Oemtoansi(STR0002), Oemtoansi(STR0003))
	Return Nil
EndIf


DEFINE MSDIALOG oDlgAliq FROM 39,85 TO 230,340 TITLE OemToAnsi(STR0004) PIXEL OF oMainWnd
DEFINE FONT oFont NAME "Ms Sans Serif" BOLD
	// Objetivo do Programa
	@ 7, 4 TO 60, 121 LABEL STR0005 OF oDlgAliq	PIXEL

	// Este programa tem como objetivo efetuar a programação ou 
	// desprogramação do horário de verão na impressora fiscal

	@ 19, 15 SAY OemToAnsi(STR0006 + STR0007) SIZE 100, 40 OF oDlgAliq PIXEL FONT oFont
  
	@ 62, 15 RADIO oHora VAR nHora 3D SIZE 60,10 PROMPT STR0009,STR0010 of oDlgHora PIXEL  // "Adianta", "Atrasa"

DEFINE SBUTTON FROM 80, 65 TYPE 1 ;  //Impressora Ok ?
	ACTION (nOpca := 1, Iif(MsgYesNo(OemToAnsi(STR0008),OemToAnsi(STR0003)),oDlgAliq:End(),nOpca := 0) ) ENABLE OF oDlgAliq

DEFINE SBUTTON FROM 80, 94 TYPE 2 ACTION oDlgAliq:End() ENABLE OF oDlgAliq

ACTIVATE MSDIALOG oDlgAliq CENTERED

If nOpca == 1  
	
	If !VerifHora() 																//Verifica se horários estão alinhados.
		MsgStop(STR0016)															//"Horário já ajustado."	
	Else
 
		iRet := IFHrVerao( nHdlECF, If(nHora == 1,'+','-') )  
		
		If iRet == 0
			MsgAlert(STR0011)														//"Horário de verão atualizado."
		Else
			MsgAlert(STR0012 + CRLF + STR0013 + CRLF + STR0014 + CRLF + STR0015)	//"Não foi possível executar o comando."
																					//"Favor verificar as seguintes situações:"
																					//"1 - Para entrar em horário de verão deve-se enviar o comando imediatamente após o comando de redução Z."
																					//"2 - Para sair do horário de verão deve-se aguardar no mínimo 1 (uma) hora após o comando de redução Z."
		EndIf
	Endif
EndIf

oFont:End()
Return Nil

