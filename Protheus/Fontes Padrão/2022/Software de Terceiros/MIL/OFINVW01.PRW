Function OFINVW01(lEnd, cArquivo)
//
Local nCurArq
//
Local aLayFT5 := {}
Local aLayFT6 := {}
//
aAdd(aLayFT5, {"C",3,0,1," " }) // "TIPO DE REGISTRO (FT5)"})
aAdd(aLayFT5, {"C",184,0,4," " }) // "DESCRIÇÃO DA INFORMAÇÃO"})
aAdd(aLayFT5, {"N",6,0,188," " }) // "DATA DA VERSÃO (Fixo: 300997)"})

aAdd(aLayFT6, {"C",3,0,1," " }) // "TIPO DE REGISTRO (FT6)"})
aAdd(aLayFT6, {"C",1,0,4," " }) // "SALTO DE PÁGINA/QUANTIDADE DE LINHAS"})
aAdd(aLayFT6, {"C",189,0,5," " }) // "TEXTO"})
//
// PROCESSAMENTO DOS ARQUIVOS
//
aAdd(aArquivos,cArquivo)
// Laço em cada arquivo
for nCurArq := 1 to Len(aArquivos)
	// pega o próximo arquivo
	cArquivo := Alltrim(aArquivos[nCurArq])
	//
	nPos = Len(cArquivo)
	if nPos = 0
		lAbort = .t.
		return
	endif
	// Processamento para Arquivos TXT planos
	FT_FUse( cArquivo )
	//
	FT_FGotop()
	if FT_FEof()
		loop
	endif
	//
	nTotRec := FT_FLastRec()
	//
	nLinhArq := 0
	While !FT_FEof()
		cStr := FT_FReadLN()
		nLinhArq++
		// Informações extraídas da linha do arquivo de importação ficam no vetor aInfo
		if Left(cStr,3)=="FT5"
			aInfo := ExtraiEDI(aLayFT5,cStr)
		elseif Left(cStr,3)=="FT6"
			aInfo := ExtraiEDI(aLayFT6,cStr)
		endif
		// Trabalhar com aInfo gravando as informações
		if Left(cStr,3) $ "FT5.FT6"
			GrvInfo(aInfo)
		endif
		FT_FSkip()
	EndDo
	//
	FT_FUse()
next
//
return
