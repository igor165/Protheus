Static Function GrvInfo(aInfo)
Local nCntFor
Titulo := STR0002
Cabec1 := " "
Cabec2 := " "
NomeProg := "OFINVW01"
// Realizar as atualizações necessárias a partir das informações extraídas
// fazer verificações de erro e atualizar o vetor aIntIte ou aLinErros conforme
// o caso
if li > 65
	li := Cabec(Titulo,Cabec1,Cabec2,NomeProg,Tamanho,nTipo)
	@li++ ,1 psay " "
endif
//
if Empty(aInfo)
	@li ++ ,1 psay cArquivo + STR0001 + Alltrim(STR(nLinhArq))
endif
//
if aInfo[1] == "FT5"
	@li ++ ,1 psay aInfo[2]
elseif aInfo[1] == "FT6"
	if aInfo[2] == "I"
		li := Cabec(Titulo,Cabec1,Cabec2,NomeProg,Tamanho,nTipo)
		@li++ ,1 psay " "
		@li++ ,1 psay aInfo[3]
	else
		for nCntFor := 1 to val(aInfo[2])
			li++
		next
		@li++ ,1 psay aInfo[3]
	endif
endif
//
return
