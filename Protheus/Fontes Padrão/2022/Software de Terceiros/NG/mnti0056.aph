<script type="text/javascript">
var dom = $("#tree");
var search = $("#search");

dom.jstree({
	core: {
		data: nodes
	},
	plugins: ["search"]
});
dom.on("select_node.jstree", function(event, obj) {
	var code = obj.node.li_attr['aria-code'];
	fcSeleciona(code);
});

var to = false;
search.keyup(function() {
	if(to) {
		clearTimeout(to);
	}
    to = setTimeout(function() {
      var v = search.val();
      dom.jstree(true).search(v);
    }, 250);
});

</script>
