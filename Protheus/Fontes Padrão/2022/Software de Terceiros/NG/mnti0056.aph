					aAdd(aVerTUA, {"1",aPswret[nX]})
				EndIf
			Next nX
		EndIf

		For nX := 1 to Len(aVerTUA)
			dbSelectarea("TUA")
			dbSetorder(1)
			If dbSeek( xFilial("TUA") + "11" + aVerTUA[nX][2] )
				lRestri := .T.
				Exit
			EndIf
		Next nX
	EndIf

	RestArea(aArea)

	If lRestri
		dbSelectArea( "TAF" )
		dbSetOrder(1)
		If dbSeek( xFilial( "TAF" ) )

			aShowTAF := NGTUATAF(TAF->TAF_CODNIV)

			While !Eof() .And. TAF->TAF_FILIAL == xFilial( "TAF" )

				If asCan(aShowTAF,{|x| x == TAF->TAF_CODNIV}) == 0
					TAF->(DbSkip())
					Loop
				EndIf

				%>
				window.nodes.push({
					id: "<%= TAF->TAF_CODNIV %>",
					text: "<%= TAF->TAF_NOMNIV %>",
					parent: "<%= TAF->TAF_NIVSUP %>",
					codbem: "<%= TAF->TAF_CODCON %>"
				});
				<%

				TAF->( dbSkip() )
			End
		EndIf
	Else

		BeginSQL Alias cAlsTAF
			
			SELECT 
				TAF.TAF_CODCON,
				TAF.TAF_CODNIV,
				TAF.TAF_NOMNIV,
				TAF.TAF_NIVSUP
			FROM
				%table:TAF% TAF
			WHERE 
				TAF.TAF_FILIAL =  %xFilial:TAF% AND
				TAF.TAF_INDCON <> '0'           AND
				TAF.TAF_MODMNT <> ' '           AND
				TAF.%NotDel%
			ORDER BY
				TAF.TAF_CODNIV,
				TAF.TAF_NIVSUP

		EndSQL

		While (cAlsTAF)->( !Eof() )
			
			%>
				window.nodes.push( {
					id:     "<%= (cAlsTAF)->TAF_CODNIV %>",
					text:   "<%= (cAlsTAF)->TAF_NOMNIV %>",
					parent: "<%= (cAlsTAF)->TAF_NIVSUP %>",
					codbem: "<%= (cAlsTAF)->TAF_CODCON %>"
				} );
			<%
		
			(cAlsTAF)->( dbSkip() )

		End

		(cAlsTAF)->( dbCloseArea() )

	EndIf

EndIf

%>

<%If !Empty(aArea[1])%>
	nodes = unflatten(nodes);

<%Else%>
