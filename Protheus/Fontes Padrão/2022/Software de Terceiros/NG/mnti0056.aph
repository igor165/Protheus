<script type="text/javascript">
window.nodes = [];
function unflatten(arr) {
  var map = {};
  var node;
  var roots = [];
  for (var i = 0; i < arr.length; i++) {
    node = arr[i];
    node.text = node.text.trim();
	if (node.codbem.trim() === "") {
		node.icon = 'ng_ico_folder11.png';
	} else {
		node.icon = 'ng_ico_engrenagem.png';
	}

	node.li_attr = { 'aria-code': node.codbem.trim() === "" ? node.id : node.codbem };
    node.children = [];
    map[node.id] = i;
    if (node.parent !== "000") {
	  try {
      	arr[map[node.parent]].children.push(node);
	  } catch (err) {
		// Tratar erro de base
		console.error("Erro no item ", node);
		// Continue
	  }
    } else {
      roots.push(node);
    }
    delete node.parent;
  }
  return roots;
}

<%

//verfica se o Usuário possui restrição de acesso.
aArea := GetArea()
If !Empty(aArea[1])
	cGrpUsr := httpSession->TQB_CDSOLI
	dbSelectArea("TUA")
	dbSetOrder(1)
	If dbSeek(xFilial("TUA")+"12"+cGrpUsr)
		lRestri := .T.
	Else
		aVerTUA := {}
		//Verifica se possui restrição de acesso pelo grupo
		aPswRet := UsrRetGrp(cUsername)
		If Len(aPswRet) > 0
			For nX := 1 to Len(aPswRet)
