	ATFSaldo(SN3->N3_CDESP  ,dDataBase,"7"	,AtfMultMoe("SN3","N3_VRCDA"),;
		"-",,SN3->N3_SUBCDES,,SN3->N3_CLVLDES)
	
	lRetGrv := .T.
	
Endif

RestArea( aArGrv )
Return(lRetGrv)


