Local lValMV 	:= .T.	
Local lValPar	:= .F.
                 
If lValMV .And. !GetNewPar("MV_ATFINFL",If(ExistMV("MV_ATFINFL"),.F.,ValMvAtf(@lValPar)))
	If lValPar
		MsgStop( OemToAnsi(STR0026), OemToAnsi(STR0027) ) //" Paramentro MV_ATFINFL inexistente, favor cria-lo."###" MV_ATFINFL nao existe"
	Else
