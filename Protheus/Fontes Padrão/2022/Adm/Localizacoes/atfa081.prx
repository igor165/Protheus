	MsUnLock()
	DbCommit()
	
	//ÚÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄ¿
	//³ Atualiza Saldos do Ativo Fixo ³
	//ÀÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÄÙ
	ATFSaldo(SN3->N3_CCORREC,dDataBase,"6"	,AtfMultMoe("SN3","N3_VRCACM"),;
