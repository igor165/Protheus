Function WhereSRI()

Local cQueryWhere

#IFDEF TOP
	cQueryWhere := "( RI_FILIAL='" + SRA->RA_FILIAL + "' AND " + "RI_MAT='" + SRA->RA_MAT + "') "
	cQueryWhere += " AND "
	cQueryWhere += " RI_PERIODO='" + RcPeriodoInit() + "'"
	cQueryWhere += " AND "
	cQueryWhere += "RI_ROTEIR='" + RcRoteirInit() + "'"
	cQueryWhere += " AND "
	cQueryWhere += "D_E_L_E_T_<>'*' "
#ELSE
	cQueryWhere := " RI_PERIODO=='" + RcPeriodoInit() + "'"
	cQueryWhere += " .AND. "
	cQueryWhere += "RI_ROTEIR=='" + RcRoteirInit() + "'"
#ENDIF

Return( cQueryWhere )