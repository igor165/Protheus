/*/
Static Function fVldModel( oModel, nOperation )
Local lRetorno 	:= .T.
Local cMyVale	:= cValtoChar(Iif( Type("nTpVale") == "U", 1, nTpVale ) )
Local cMyCod	:= ""
Local oMyMdl 	:= oModel:GetModel("GPEA012_MRFO")
Local cTipPesq	:= ""
Local cVale		:= ""

If (Type("nTpVale") == "U")
	nTpVale := 1
EndIf

cTipPesq := IIF(nTpVale == 1, "VR", "VA")

//No permitir alterao ou excluso se existir lanamento de vnculos para o vale
If ( nOperation == 4 .Or.  nOperation == 5 ) .and. RFO->RFO_CONTRA == "1"  
	cVale := RFO->RFO_CODIGO

	lRetorno := !fTemVincul(cTipPesq, cVale)
	If !lRetorno
		Help( ,, OemToAnsi(STR0017),, OemToAnsi(STR0018)+ " " + OemToAnsi(STR0019), 1, 0 ) //"Ateno" ## "O vale selecionado  referente a contrato e possui lanamento de vnculos efetuado. Selecione a opo de visualizao."
	Endif
EndIf    
	
Return( lRetorno )

