Static Function BldafVerbas( cFilSRV )

Local aArea		:= GetArea()
Local aQuery	:= {}
Local aVerbas	:= {}
Local bSkip		:= { || aAdd( aVerbas , ( RV_COD + " - " + RV_DESC ) ) , .F. }

#IFDEF TOP
	aQuery		:= Array( 03 )
	aQuery[01]	:= "RV_FILIAL='"+cFilSRV+"'"
	aQuery[02]	:= " AND "
	aQuery[03]	:= "D_E_L_E_T_=' ' "
#ENDIF

SRV->( GdMontaCols(	NIL				,;
					NIL				,;
					NIL				,;
					NIL				,;
					NIL				,;
					{				 ;
						"RV_FILIAL"	,;
						"RV_COD"	,;
						"RV_DESC"	 ;
					}				,;
					NIL				,;
					"SRV"			,;
					cFilSRV			,;
					NIL				,;
					bSkip			,;
					.F.				,;
					.F.				,;
					.F.				,;
					NIL				,;
					.F.				,;
					.F.				,;
					aQuery			,;
					.F.				,;
					.T.				,;
					.F.				,;
					.T.				,;
					.F.				,;
					.F.				,;
					.F.				 ;
				   );
	  )

RestArea( aArea )

Return( aClone( aVerbas ) )

